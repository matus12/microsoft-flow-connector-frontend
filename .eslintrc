{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      // enable global strict mode
      "impliedStrict": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "env": {
    // browser global variables
    "browser": true,
    // Node.js global variables and Node.js scoping
    "node": true,
    // adds all of the Jasmine testing global variables for version 1.3 and 2.0
    "jasmine": true,
    // jQuery global variables
    "jquery": true
  },
  "globals": {
    "Intercom": true,
    "AuthRocket": true
  },
  "extends": [
    "airbnb"
  ],
  "rules": {
    // disabled for now. We need to discuss this in a team.
    "no-underscore-dangle": 0,
    // disabled for now. We need to discuss this in a team.
    "quote-props": 0,
    // disabled for now. We need to discuss this in a team.
    "react/jsx-boolean-value": 0,
    // disabled for now. We need to discuss this in a team.
    "react/prefer-stateless-function": 0,
    // disabled for now. We need to discuss this in a team.
    "new-cap": 0,
    // disabled for now. We need to discuss this in a team.
    "react/no-multi-comp": 0,
    // disabled for now. We need to discuss this in a team.
    "camelcase": 0,
    // We don't want to follow those rules.
    "no-use-before-define": 0,
    "arrow-body-style": 0,
    "prefer-template": 0,
    "brace-style": [
      "error",
      "stroustrup"
    ],
    "max-len": 0,
    "no-debugger": 1,
    "no-restricted-syntax": 1,
    "no-unused-vars": 1
  }
}
